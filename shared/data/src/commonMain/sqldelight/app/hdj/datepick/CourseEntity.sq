import app.hdj.datepick.data.entity.course.CourseTagResponse;
import app.hdj.datepick.data.entity.user.UserResponse;
import kotlin.collections.List;

CREATE TABLE courseEntity (
    id INTEGER AS Long NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    meetAt TEXT,
    imageUrl TEXT,
    isPrivate  INTEGER AS Boolean DEFAULT 0 NOT NULL,
    viewCount INTEGER AS Long NOT NULL,
    pickCount INTEGER AS Long NOT NULL,
    isPicked INTEGER AS Boolean DEFAULT 0 NOT NULL,
    user TEXT AS UserResponse NOT NULL,
    tags TEXT AS List<CourseTagResponse> NOT NULL
);

getById:
SELECT * FROM courseEntity WHERE id = :id;

insert:
INSERT INTO courseEntity(
id,
title,
meetAt,
imageUrl,
isPrivate,
viewCount,
pickCount,
isPicked,
user,
tags
) VALUES ?;

deleteById:
DELETE FROM courseEntity WHERE id = :id;