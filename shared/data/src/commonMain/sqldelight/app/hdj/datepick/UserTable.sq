import java.lang.Boolean;

CREATE TABLE userTable (
    id TEXT NOT NULL PRIMARY KEY,
    nickname TEXT NOT NULL,
    profileImageUrl TEXT,
    isMe INTEGER AS Boolean DEFAULT 0 NOT NULL,
    cachedAt INTEGER AS Long NOT NULL
);

getMe:
SELECT * FROM userTable WHERE isMe = 1;

getById:
SELECT * FROM userTable WHERE id = :id;

insert:
INSERT INTO userTable(
    id,
    nickname,
    profileImageUrl,
    isMe,
    cachedAt
) VALUES ?;

deleteById:
DELETE FROM userTable WHERE id = :id;

deleteMe:
DELETE FROM userTable WHERE isMe = 1;